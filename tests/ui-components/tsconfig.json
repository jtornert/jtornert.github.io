{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "outDir": "dist",
        "isolatedModules": true,
        "allowJs": true,
        "noFallthroughCasesInSwitch": true,
        "lib": ["DOM", "ESNext"],
        "paths": {
            "datastar": ["./node_modules/datastar/library/src/bundles/datastar.ts"],
            "@types": ["./node_modules/datastar/library/src/engine/types.ts"]
        }
    }
}
